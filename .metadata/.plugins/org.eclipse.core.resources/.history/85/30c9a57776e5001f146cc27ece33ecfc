package com.jsp.hibernate_actor_movie;

import java.util.Scanner;

import com.jsp.hibernate_actor_movie.dao.ActorDao;

/**
 * Hello world!
 *
 */
public class App 
{
    public static void main( String[] args )
    {
    	ActorDao a =new ActorDao();
    	Scanner sc = new Scanner(System.in);

		while (true) {

			System.out.println("1.addActor\n2:findActorById\n3:addProductToUserCart\n4:removeProductFromUserCart\n5:findAllProductsFromUserCart\n6:Exit");
			int choice = sc.nextInt();

			if (choice >= 1 && choice <= 10) {
				System.out.println("enter a  choice");

			}
			switch (choice) {
			case 1:
				a.addActor();
				break;
			case 2:
				a.findActorById();
				break;
			case 3:
				a.findAllActorByName();
				break;
			case 4:
				a.findAllActorByIndustry();
				break;
			case 5:
				a.findAllActorsBetweenAge();
				break;
			case 6:
				a.findActorByMovieId();;
				break;
			case 7:
				a.updateAllActorSalaryByMovieTitle();
				break;
			case 8:
				a.deleteAllActorWithSalaryGreaterThan();
				break;
			case 9:
				a.deleteAllActorByMovieGenre();
				break;
			case 10:
				System.out.println("Thankyou!!!!");
				System.exit(0);
				break;
			default:
				System.out.println("invaid choice");

			}
			System.out.println("---------");

		}
    }
    }

